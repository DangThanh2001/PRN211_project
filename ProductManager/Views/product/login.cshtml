@model Admin
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<!-- jQuery library -->
	<script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>

	<!-- Popper JS -->
	<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

	<!-- Latest compiled JavaScript -->
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>

	<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
	@*<link rel="stylesheet" href="~/css/home.css">*@
	<link rel="icon" href="~/css/ac_unit_FILL0_wght400_GRAD0_opsz48.svg">

	<title>Product Reading</title>
</head>
<body>
	<div></div>
	<div class="container-fluid">
		<div class="row">
			<div class="col-sm-12">
				<h1 class="text-center">Sunflower</h1>
			</div>
		</div>

		<div class="row card-body">
			<div class="col-sm-1"></div>
			<div class="col-sm-5 ">
				<img src="~/css/SunF.jpg" class="img-fluid" />
			</div>
			<div class="col-sm-5 border">
				<div class="mu-3">
					<form action="/product/dologin" method="post">

						<div class="form-group">
							<label for="user">Username:</label>
							<input type="text" name="adm.UserName" class="form-control" id="user" placeholder="Enter your username here..." value="@Model.UserName">
						</div>

						<div class="form-group">
							<label for="pass">Password:</label>
							<input type="password" name="adm.Password" class="form-control" id="pass" placeholder="Enter your password here..." value="@Model.Password">
						</div>

						<div class="form-group">
							<label for="rem">
								<input type="checkbox" id="rem" value="true" name="rem" @ViewBag.rem>Remeber me
							</label>
						</div>
						@if (ViewBag.mess is not null)
						{
							<div class="text-center errorM">
								<span class="text-danger">
									@ViewBag.mess <br>
									<i>Hints: </i> username is <strong>aaa</strong> and password is <strong>aaa</strong>
								</span>
							</div>
						}

						<input type="submit" class="form-control btn btn-outline-primary my-2 my-sm-0" value="Login">
						<div class="text-center optional">
							<a href="#" class="text-info">Forgot password</a>
						</div>
					</form>
				</div>
				<div>
				</div>
			</div>
			<div class="col-sm-1"></div>
		</div>
	</div>

	<style>
		.text-center.optional {
			margin-top: 1em;
		}

		.errorM {
			margin-bottom: 1em;
		}

		form {
			margin: 3rem 0rem;
		}
	</style>
</body>
</html>